<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        android:paddingBottom="@dimen/activity_vertical_margin"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        tools:context="com.example.tmp.myfirstandroidapp.MainActivity" android:onClick="renderNuevaCapa">

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true" android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" android:layout_alignParentBottom="true"
            android:onClick="renderNuevaCapa">
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/titulo"
                android:id="@+id/textView"
                android:textSize="26dp" android:gravity="center_horizontal" android:textColor="#040404"
                android:layout_alignParentTop="true" android:layout_alignParentStart="true"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/lbl1"
                android:id="@+id/textView2" android:layout_below="@+id/textView" android:layout_alignParentStart="true"
                android:layout_marginStart="43dp" android:layout_marginTop="100dp"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBoxMiles"
                android:width="100dp" android:layout_alignTop="@+id/textView2" android:layout_toEndOf="@+id/textView2"
                android:layout_marginStart="74dp"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="@string/lbl2"
                android:id="@+id/textView3" android:layout_centerVertical="true"
                android:layout_alignStart="@+id/textView2"/>
        <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/txtBoxKms"
                android:width="100dp"
                android:layout_alignBottom="@+id/textView3" android:layout_alignStart="@+id/txtBoxMiles"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn1"
                android:id="@+id/btnMilesToKm"
                android:layout_marginTop="90dp"
                android:layout_below="@+id/txtBoxKms" android:layout_alignParentEnd="true"
                android:layout_marginEnd="26dp"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/btn2"
                android:id="@+id/btnKmsToMiles"
                android:layout_marginTop="28dp"
                android:layout_below="@+id/btnMilesToKm" android:layout_alignEnd="@+id/btnMilesToKm"
                android:layout_alignStart="@+id/btnMilesToKm"/>
    </RelativeLayout>
</RelativeLayout>
